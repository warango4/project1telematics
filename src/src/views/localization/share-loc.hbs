<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Watch previous localizations</h3>
        </div>
        <div class="card-body">
            <form action="/localization/share-loc" method="POST">
            <!--<div class="form-group">
                <input type="text" name="user" class="form-control" autofocus>
            </div>-->
            <div class="form-group">
                <input type="text" name="latitude" class="form-control" placeholder="Latitude" autofocus>
            </div>
            <div class="form-group">
                <input type="text" name="length" class="form-control" placeholder="Longitude" autofocus>
            </div>
            <div class="form-group">
                <input type="time" name="hour" class="form-control" placeholder="Hour" autofocus>
            </div>
            <div class="form-group">
                <input type="date" name="date" class="form-control" placeholder="Date" autofocus>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Share</button>
            </div>
        </div>
    </div>
</div>