<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Watch detail of your previous localizations</h3>
        </div>
        <div class="card-body">
            <form action="/localization/watch-loc-details/{{consult._id}}" method="POST">
                <!--<div class="form-group">
                    <input type="text" name="user" class="form-control" placeholder="User"
                    value="{{consult.user}}">
                </div>-->
                <div class="form-group">
                    <input type="text" name="latitude" class="form-control" placeholder="Latitude"
                    value="{{consult.latitude}}">
                </div>
                <div class="form-group">
                    <input type="text" name="length" class="form-control" placeholder="Longitude"
                    value="{{consult.length}}">
                </div>
                <div class="form-group">
                    <input type="time" name="hour" class="form-control" placeholder="Time"
                    value="{{consult.hour}}">
                </div>
                <div class="form-group">
                    <input type="date" name="date" class="form-control" placeholder="Date"
                    value="{{consult.date}}">
                </div>
                <div class="form-group">
                    <a href="/localization" class="btn btn-info btn-block">Go back</a>
                </div>
            </form>
        </div>
    </div>
</div>